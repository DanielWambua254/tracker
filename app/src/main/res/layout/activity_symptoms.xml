<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".symptoms_activity">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/arrow_back"
        app:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms"
        android:textAlignment="center"
        android:textColor="@color/add_color"
        android:layout_marginTop="56dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/how_long"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:text="Enter symptoms that you experience."
        android:layout_below="@id/welcome_tv"
        android:layout_marginTop="36dp"/>

    <EditText
        android:id="@+id/length_days_entry"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/teal_700"
        android:hint="Enter a symptom"
        android:inputType="text"
        android:layout_below="@id/how_long"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/how_long2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:text="Describe symptoms that you experience."
        android:layout_below="@id/length_days_entry"
        android:layout_marginTop="36dp"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/teal_700"
        android:hint="Enter a symptom description"
        android:inputType="text"
        android:layout_below="@id/how_long2"
        android:layout_marginTop="16dp"/>




    <LinearLayout
        android:id="@+id/myLayout3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/length_days_entry"
        android:layout_marginTop="206dp">

        <Button
            android:id="@+id/edit_period"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:text="Cancel"
            android:layout_marginRight="28dp"
            app:backgroundTint="#4692C8"
            android:background="@drawable/btn_bg"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:text="Done"
            android:layout_marginLeft="28dp"
            app:backgroundTint="#1E72AE"
            android:background="@drawable/btn_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>